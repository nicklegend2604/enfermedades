<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="models.Vacuna" table="VACUNA" schema="NICOLAS">
        <id name="id" type="java.lang.Integer">
            <column name = "ID"></column>
            <generator class="assigned"></generator>
        </id> 
        <property name ="descripcion" type="binary">
            <column name = "DESCRIPCION"></column>
        </property>
        <property name ="nombre" type="string">
            <column name = "NOMBRE" length="100" not-null="true" unique="true"></column>
        </property>
        
        <set name="enfermedades" table="ENFERMEDAD_VACUNA" lazy="true" fetch="select" cascade="all" >
            <key>
                <column name="ID_VACUNA" not-null="true" />
            </key>
            <many-to-many entity-name="models.Enfermedad">
                <column name="ID_ENFERMEDAD" not-null="true" />
            </many-to-many>
        </set>
    </class>

</hibernate-mapping>


